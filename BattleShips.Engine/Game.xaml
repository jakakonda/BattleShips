<Window x:Class="BattleShips.Engine.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleShips.Engine"
        mc:Ignorable="d"
        Title="BattleShips! Let the best AI win!" Height="300" Width="488.043">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3"></ColumnDefinition>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Canvas Grid.Column="0" Background="DodgerBlue" x:Name="BoardOne" />
            <Rectangle Grid.Column="1" Fill="#FF535353"></Rectangle>
            <Canvas Grid.Column="2" Background="DodgerBlue" x:Name="BoardTwo" />
        </Grid>


    </Grid>
</Window>
